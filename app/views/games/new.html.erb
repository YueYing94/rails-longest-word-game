<h1>New game</h1>
<ul class="letters">
<% @letters.each do  |letter| %>
<li class="word"><%= letter %></li>
<% end %>
</ul>
<p>What is the longest word you can find</p>
<form action="/score" method="post" data-turbo="false" class="input-group mb-3">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="result" class="form-control">
  <input type="submit" value="Play" class="btn btn-outline-secondary">
</form>
